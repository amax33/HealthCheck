<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Show"
    android:orientation="horizontal"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Show"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp"
            android:id="@+id/text1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp"
            android:id="@+id/text2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp"
            android:id="@+id/text3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp"
            android:id="@+id/text4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Show"
        android:orientation="vertical"
        android:layout_weight="1">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/gif_heart"
            android:src="@drawable/giphy"/>
        <com.ramijemli.percentagechartview.PercentageChartView
            android:id="@+id/percent"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:pcv_progress="100"/>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/gif_tempCold"
            android:src="@drawable/gif_temp_cold"
            android:visibility="visible"/>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/gif_tempHot"
            android:src="@drawable/gif_temp"
            android:visibility="gone"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_gravity="center"
            android:id="@+id/sendsmsbtn"
            android:text="فرستادن اطلاعات"/>
    </LinearLayout>
</LinearLayout>
